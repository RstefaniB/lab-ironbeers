<div class="container">
    <div class="row">
        <h1 class="mt-5 mb-3 text-center">All Beers!!!</h1>
        {{#each beersFromApi}}
        <div class="card col-4 mt-5">
            <img class="mx-auto mt-4" src="{{this.image_url}}" alt="Card image cap">
            <div class="card-body text-center">
                <h2 class="">{{this.tagline}}</h2>
                <h3 class="">{{this.name}}</h3>
                <p class="card-description">{{this.description}}</p>

            </div>


        </div>
        {{/each}}
    </div>
</div>