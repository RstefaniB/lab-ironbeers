<div class="container">
    <div class="row">
        {{#each responseFromAPI}}
        <div class="col-2">
            <img class="random-image mx-auto mt-4" src="{{this.image_url}}" alt="Card image cap">
        </div>

        <div class="col-10">
            <div class="card-body text-center">
                <h3 class="">{{this.name}}</h3>
                <h2 class="">{{this.tagline}}</h2>
                <p class="card-description">{{this.description}}</p>
                <h5>Food Pairing</h5>
                <ul class="mx-auto mb-5">
                    {{#each this.food_pairing}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p class="">{{this.brewers_tips}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>